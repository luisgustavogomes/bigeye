<VBox prefHeight="530.0" prefWidth="880.0" stylesheets="@../../../../StyleCRUD.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.tbsa.controller.AmbienteController">
    <children>
        <HBox id="nav" alignment="CENTER" prefHeight="96.0" prefWidth="880.0">
            <children>
                <JFXButton id="bt" fx:id="btnNovo" contentDisplay="GRAPHIC_ONLY" onAction="#hendlerNovo" prefWidth="50.0" styleClass="btns" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                    </HBox.margin>
                    <ripplerFill>
                        <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                            <stops>
                                <Stop color="BLACK" />
                                <Stop color="#255ea4" offset="1.0" />
                            </stops>
                        </RadialGradient>
                    </ripplerFill>
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/folders%20(9).png" />
                            </image>
                        </ImageView>
                    </graphic>
                </JFXButton>
                <JFXButton id="bt" fx:id="btnAbrir" contentDisplay="GRAPHIC_ONLY" layoutX="20.0" layoutY="20.0" onAction="#hendlerAbrir" prefWidth="50.0" styleClass="btns">
                    <ripplerFill>
                        <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                            <stops>
                                <Stop color="BLACK" />
                                <Stop color="#255ea4" offset="1.0" />
                            </stops>
                        </RadialGradient>
                    </ripplerFill>
                    <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/folders%20(3).png" />
                            </image>
                        </ImageView>
                    </graphic>
                </JFXButton>
                <JFXButton id="bt" fx:id="btnExcluir" contentDisplay="GRAPHIC_ONLY" layoutX="58.0" layoutY="20.0" onAction="#hendlerExcluir" prefWidth="50.0" styleClass="btns">
                    <ripplerFill>
                        <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                            <stops>
                                <Stop color="BLACK" />
                                <Stop color="#255ea4" offset="1.0" />
                            </stops>
                        </RadialGradient>
                    </ripplerFill>
                    <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/folders%20(2).png" />
                            </image>
                        </ImageView>
                    </graphic>
                </JFXButton>
                <JFXTextField fx:id="txtPesquisa" labelFloat="true" onKeyPressed="#handlerKey" prefHeight="34.0" prefWidth="844.0" promptText="Pesquisa" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </JFXTextField>
                <JFXButton id="bt" fx:id="btnAtualizacao" contentDisplay="GRAPHIC_ONLY" layoutX="132.0" layoutY="20.0" onAction="#hendlerAtualizacao" prefWidth="50.0" styleClass="btns">
                    <ripplerFill>
                        <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                            <stops>
                                <Stop color="BLACK" />
                                <Stop color="#255ea4" offset="1.0" />
                            </stops>
                        </RadialGradient>
                    </ripplerFill>
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/folders%20(4).png" />
                            </image>
                        </ImageView>
                    </graphic>
                </JFXButton>
            </children>
        </HBox>
        <GridPane prefHeight="488.0" prefWidth="880.0" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TableView id="id" fx:id="tvAmbiente" onMouseClicked="#handlerEdicao" prefHeight="456.0" prefWidth="880.0" styleClass="tableColumn" stylesheets="@../../../../StyleCRUD.css" tableMenuButtonVisible="true" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <columns>
                        <TableColumn id="id" fx:id="idAmbienteCol" maxWidth="80.0" minWidth="80.0" text="ID" />
                        <TableColumn fx:id="descricaoCol" prefWidth="742.0" text="DESCRIÇÃO" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
